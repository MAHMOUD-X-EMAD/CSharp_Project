<Window x:Class="inventroy_system.samePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:inventroy_system"
        mc:Ignorable="d"
        Title="samePage" Height="250" Width="400"
           WindowStartupLocation="CenterScreen">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <TextBlock   x:Name="labpassword" HorizontalAlignment="Center" FontSize="30" FontWeight="Bold">Password</TextBlock>
            <PasswordBox  x:Name="mainUserPassword"   PasswordChar="*" Width="200" Height="30"></PasswordBox>
            <Button Template="{DynamicResource ButtonTemplate1}" Width="150" Height="37" Margin="10" Click="Button_Click">Enter To User Page</Button>
            <TextBlock x:Name="Mgs" HorizontalAlignment="Center" Width="150" Visibility="Hidden" ></TextBlock>
        </StackPanel>
    </Grid>
</Window>
